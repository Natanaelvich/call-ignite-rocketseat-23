generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id         String   @id @default(uuid())
    username   String   @unique
    name       String
    bio        String?  @db.Text
    email      String?  @unique
    avatar_url String?
    created_at DateTime @default(now())

    @@map("users")
}
